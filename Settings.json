{
  //Localización del archivo : C:\Users\USUARIO\AppData\Roaming\Code\User\settings.json
  
  //Paso1. Instalar extension en VSCODE "REMOTE WSL" y "Powershell" , ademas, instalar Ubuntu 20.04 en la tienda de Windows 10.
   
  //Paso2. Instalar Git y Gitbash
  //Source : https://docs.microsoft.com/es-es/windows/wsl/install-win10
  //Source 2: https://docs.microsoft.com/es-es/windows/wsl/wsl2-kernel
  
  //Indicamos los shells a los que queremos tener acceso
  "shellLauncher.shells.windows": [
    {
    "shell": "C:\\Windows\\System32\\cmd.exe",
    "label": "cmd"
    },
    {
    "shell": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "label": "PowerShell"
    },
    {
    "shell": "C:\\Program Files\\Git\\bin\\bash.exe",
    "label": "Git bash"
    },
    {
    "shell": "C:\\Windows\\System32\\bash.exe",
    "label": "WSL Bash"
    }
    ],
    
  ///Instalación DE JRE, se ha de descargar el directorio de JRE11 ->     "java.home" : "RUTA DE JRE" , 
  
  "java.home" : "C:\\Instalacion de Java\\JRE\\java-11",
  
  //Otras opciones de VSCODE O OTRAS EXTENSIONES

  "editor.suggestSelection" : "first",
  "vsintellicode.modify.editor.suggestSelection" : "automaticallyOverrodeDefaultValue",
  "java.semanticHighlighting.enabled" : true,
  
  "vsintellicode.python.completionsEnabled": false,
  "vsintellicode.sql.completionsEnabled": false,
  "vsintellicode.typescript.completionsEnabled": false
}
